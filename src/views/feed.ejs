<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
    <link rel="stylesheet" href="../styles/feed.css">

</head>

<body>


    <header>
        <form id="back" action="/" method="get">
            <button type="submit" id="back-btn"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </form>

        <div class="container">


            <div class="profile">
                <div class="profile-image">

                    <img src="/photos/<%= user.username %>/<%= user.profile %>" alt="">

                </div>

                <div class="profile-user-settings">

                    <h1 class="profile-user-name">
                        <%= user.username %>
                    </h1>

                    <button class="btn profile-edit-btn">Edit Profile</button>

                    <button class="btn profile-settings-btn" aria-label="profile settings"><i class="fas fa-cog"
                            aria-hidden="true"></i></button>

                </div>

                <div class="profile-stats">

                    <ul>
                        <li><span class="profile-stat-count">
                                <%= user.stats.posts %>
                            </span> posts</li>
                        <li><span class="profile-stat-count">
                                <%= user.stats.followers %>
                            </span> followers</li>
                        <li><span class="profile-stat-count">
                                <%= user.stats.following %>
                            </span> following</li>
                    </ul>

                </div>

                <div class="profile-bio">

                    <p><span class="profile-real-name">
                            <%= user.realname %>
                        </span>
                        <%= user.description %>
                    </p>

                </div>

            </div>
            <!-- End of profile section -->

        </div>
        <!-- End of container -->

    </header>

    <main>
        <div class="container">

            <div class="gallery">
                <% user.photos.forEach((photo, index)=> { %>
                    <div class="gallery-item" tabindex="0">

                        <img src="/photos/<%= user.username %>/<%= photo %>" class="gallery-image" alt="">

                        <div class="gallery-item-info">

                            <ul>
                                <li class="gallery-item-likes"><span class="visually-hidden">Likes:</span><i
                                        class="fas fa-heart" aria-hidden="true"></i> 56</li>
                                <li class="gallery-item-comments"><span class="visually-hidden">Comments:</span><i
                                        class="fas fa-comment" aria-hidden="true"></i> 2</li>
                            </ul>

                        </div>

                        <form class="delete-img" action="/delete" method="get">
                            <input type="hidden" name="username" value="<%= user.username %>">
                            <input type="hidden" name="imgpath" value="/photos/<%= user.username %>/<%= photo %>">
                            <button type=" submit" class="black-btn" name="delete" id="delete" value="<%= index %>"><i
                                    class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>

                    <% }) %>

            </div>
            <!-- End of gallery -->

            <div class=" loader">
            </div>

        </div>
        <!-- End of container -->

    </main>
    <script src="https://cdn.socket.io/4.5.3/socket.io.min.js"
        integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi"
        crossorigin="anonymous"></script>
    <script src="../scripts/feed.js">
    </script>
</body>

</html>